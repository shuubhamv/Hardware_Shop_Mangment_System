

@model CRMSystem.Models.item

@{
    ViewBag.Title = "Edit Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary mb-4">Edit Item</h2>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.itemid)

            <div class="row mb-3">
                @Html.LabelFor(model => model.itemName, new { @class = "col-sm-3 col-form-label fw-bold" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.itemName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.itemName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.category, new { @class = "col-sm-3 col-form-label fw-bold" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.category, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.manufacturer, new { @class = "col-sm-3 col-form-label fw-bold" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.manufacturer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.manufacturer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                @Html.LabelFor(model => model.quntity, new { @class = "col-sm-3 col-form-label fw-bold" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.quntity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.quntity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success px-4">Save Changes</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
            </div>
        }
    </div>
</div>
