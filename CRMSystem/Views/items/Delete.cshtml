



@model CRMSystem.Models.item

@{
    ViewBag.Title = "Delete Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger mb-4">Delete Item</h2>

        <h4 class="text-warning text-center">Are you sure you want to delete this?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-4 fw-bold">
                @Html.DisplayNameFor(model => model.itemName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.itemName)
            </dd>

            <dt class="col-sm-4 fw-bold">
                @Html.DisplayNameFor(model => model.category)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.category)
            </dd>

            <dt class="col-sm-4 fw-bold">
                @Html.DisplayNameFor(model => model.manufacturer)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.manufacturer)
            </dd>

            <dt class="col-sm-4 fw-bold">
                @Html.DisplayNameFor(model => model.quntity)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.quntity)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        }
    </div>
</div>
