

@model CRMSystem.Models.bill

@{
    ViewBag.Title = "Delete Bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-danger">🗑️ Delete Bill</h2>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">← Back to List</a>
    </div>

    <div class="card border-danger shadow-lg p-4">
        <h4 class="text-secondary">Are you sure you want to delete this bill?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Item</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.item)</dd>

            <dt class="col-sm-3 fw-bold">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.category)</dd>

            <dt class="col-sm-3 fw-bold">Manufacturer</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.manufacturer)</dd>

            <dt class="col-sm-3 fw-bold">Quantity</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.quntity)</dd>

            <dt class="col-sm-3 fw-bold">Price</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.price)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="text-end mt-3">
                <button type="submit" class="btn btn-danger">❌ Confirm Delete</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        }
    </div>
</div>
